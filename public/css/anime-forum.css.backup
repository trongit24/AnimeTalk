/* AnimeTalk - Makoto Shinkai Style (Your Name Inspired) */

/* ===== CSS Variables - Shinkai-esque Color Palette ===== */
:root {
    /* Sky & Light Colors */
    --sky-blue: #5BA3D0;
    --sky-light: #87CEEB;
    --sky-sunset: #FF7E5F;
    --sky-twilight: #6A5ACD;
    
    /* Vibrant Colors */
    --sunset-orange: #FF6B6B;
    --sunset-pink: #FFB6C1;
    --twilight-purple: #9B7EDE;
    --dawn-yellow: #FFE66D;
    --cloud-white: #F8F9FA;
    
    /* Nature Colors */
    --grass-green: #7FB069;
    --ocean-blue: #4A90E2;
    --sakura-pink: #FFB7C5;
    
    /* Text & UI */
    --bg-primary: linear-gradient(180deg, #E8F4F8 0%, #FFEEF8 50%, #FFF8E1 100%);
    --bg-secondary: #FFFFFF;
    --bg-card: rgba(255, 255, 255, 0.9);
    --bg-hover: rgba(135, 206, 235, 0.1);
    --text-primary: #2C3E50;
    --text-secondary: #546E7A;
    --text-light: #78909C;
    --border-color: rgba(135, 206, 235, 0.3);
    --border-radius: 20px;
    --border-radius-sm: 12px;
    --border-radius-lg: 28px;
    
    /* Shinkai-style Shadows & Glows */
    --shadow-sm: 0 4px 12px rgba(91, 163, 208, 0.15);
    --shadow-md: 0 8px 24px rgba(91, 163, 208, 0.2);
    --shadow-lg: 0 12px 40px rgba(91, 163, 208, 0.25);
    --glow-soft: 0 0 20px rgba(135, 206, 235, 0.4);
    --glow-strong: 0 0 30px rgba(255, 182, 193, 0.5);
    --transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* ===== Reset & Base Styles ===== */
* { margin: 0; padding: 0; box-sizing: border-box; }

body {
    font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: linear-gradient(180deg, #E8F4F8 0%, #FFEEF8 50%, #FFF8E1 100%);
    background-attachment: fixed;
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
    position: relative;
}

/* Shinkai-style Light Rays Effect */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(ellipse at 20% 30%, rgba(255, 182, 193, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at 80% 70%, rgba(135, 206, 235, 0.15) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
}

.container { max-width: 1200px; margin: 0 auto; padding: 0 24px; position: relative; z-index: 1; }

/* ===== Navigation - Shinkai Style ===== */
.navbar {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 249, 250, 0.9) 100%);
    backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 2px solid rgba(135, 206, 235, 0.3);
    padding: 18px 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 4px 20px rgba(91, 163, 208, 0.15), 0 0 40px rgba(135, 206, 235, 0.1);
}

.navbar .container { display: flex; align-items: center; gap: 32px; }

.nav-brand a {
    font-size: 26px;
    font-weight: 800;
    background: linear-gradient(135deg, #5BA3D0 0%, #9B7EDE 50%, #FFB6C1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    text-shadow: 0 0 30px rgba(135, 206, 235, 0.3);
    letter-spacing: 1px;
}

.nav-links { display: flex; align-items: center; gap: 24px; flex: 1; }

.nav-links a {
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 600;
    transition: var(--transition);
    padding: 10px 18px;
    border-radius: var(--border-radius-sm);
    position: relative;
}

.nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 3px;
    background: linear-gradient(90deg, #5BA3D0, #FFB6C1);
    transition: var(--transition);
    border-radius: 2px;
}

.nav-links a:hover::after, .nav-links a.active::after { width: 80%; }

.nav-links a:hover, .nav-links a.active {
    color: #5BA3D0;
    background: rgba(135, 206, 235, 0.1);
    box-shadow: 0 0 15px rgba(135, 206, 235, 0.2);
}

.nav-search { flex: 0 0 300px; }
.nav-search form { position: relative; }

.nav-search input {
    width: 100%;
    padding: 12px 48px 12px 18px;
    border: 2px solid rgba(135, 206, 235, 0.3);
    border-radius: var(--border-radius-sm);
    background: rgba(255, 255, 255, 0.8);
    font-family: inherit;
    transition: var(--transition);
    box-shadow: inset 0 2px 8px rgba(91, 163, 208, 0.05);
}

.nav-search input:focus { 
    outline: none; 
    border-color: #5BA3D0; 
    background: white;
    box-shadow: 0 0 20px rgba(91, 163, 208, 0.2), inset 0 2px 8px rgba(91, 163, 208, 0.1);
}

.nav-search button {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 8px;
    border-radius: 8px;
    transition: var(--transition);
}

.nav-search button:hover { 
    color: #5BA3D0;
    background: rgba(135, 206, 235, 0.15);
    transform: scale(1.1);
}

/* ===== Buttons - Shinkai Style ===== */
.btn-primary, .btn-outline, .btn-create, .btn-primary-large, .btn-view {
    padding: 12px 28px;
    border-radius: var(--border-radius-sm);
    text-decoration: none;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    display: inline-flex;
    align-items: center;
    gap: 8px;
    border: none;
    font-family: inherit;
    font-size: 14px;
    position: relative;
    overflow: hidden;
}

.btn-primary::before, .btn-primary-large::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s;
}

.btn-primary:hover::before, .btn-primary-large:hover::before {
    left: 100%;
}

.btn-primary {
    background: linear-gradient(135deg, #5BA3D0 0%, #9B7EDE 50%, #FFB6C1 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(91, 163, 208, 0.3);
}

.btn-primary:hover { 
    transform: translateY(-3px); 
    box-shadow: 0 8px 25px rgba(91, 163, 208, 0.4), 0 0 20px rgba(255, 182, 193, 0.3);
}

.btn-primary-large {
    padding: 18px 36px;
    font-size: 16px;
    background: linear-gradient(135deg, #5BA3D0 0%, #9B7EDE 50%, #FFB6C1 100%);
    color: white;
    box-shadow: 0 6px 20px rgba(91, 163, 208, 0.35);
}

.btn-primary-large:hover { 
    transform: translateY(-3px); 
    box-shadow: 0 10px 35px rgba(91, 163, 208, 0.45), 0 0 30px rgba(255, 182, 193, 0.4);
}

.btn-outline {
    background: rgba(255, 255, 255, 0.9);
    color: #5BA3D0;
    border: 2px solid #5BA3D0;
    box-shadow: 0 2px 10px rgba(91, 163, 208, 0.15);
}

.btn-outline:hover { 
    background: linear-gradient(135deg, #5BA3D0, #9B7EDE);
    color: white;
    border-color: transparent;
    box-shadow: 0 6px 20px rgba(91, 163, 208, 0.3);
}

.btn-create {
    background: linear-gradient(135deg, #FFB6C1 0%, #FF7E5F 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(255, 182, 193, 0.3);
}

.btn-create:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 182, 193, 0.4), 0 0 20px rgba(255, 126, 95, 0.3);
}

.btn-view {
    padding: 10px 20px;
    background: rgba(135, 206, 235, 0.15);
    color: #5BA3D0;
    text-decoration: none;
    border-radius: var(--border-radius-sm);
    font-size: 14px;
    font-weight: 600;
    border: 1px solid rgba(91, 163, 208, 0.2);
}

.btn-view:hover {
    background: rgba(135, 206, 235, 0.25);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(91, 163, 208, 0.2);
}

/* ===== Main Content ===== */
.main-content { 
    min-height: calc(100vh - 200px); 
    padding: 40px 0;
    position: relative;
}

/* ===== Hero Section - Shinkai Style ===== */
.hero-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
    padding: 80px 0;
    position: relative;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: -50px;
    right: -100px;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255, 182, 193, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(60px);
    pointer-events: none;
}

.hero-content h1 {
    font-size: 64px;
    font-weight: 800;
    line-height: 1.1;
    background: linear-gradient(135deg, #5BA3D0 0%, #9B7EDE 50%, #FFB6C1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 24px;
    text-shadow: 0 0 40px rgba(135, 206, 235, 0.3);
    letter-spacing: -1px;
}

.hero-content p { 
    font-size: 20px;
    color: var(--text-secondary);
    margin-bottom: 36px;
    line-height: 1.8;
}

.hero-image { 
    position: relative;
    perspective: 1000px;
}

.anime-card-featured {
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(91, 163, 208, 0.3), 0 0 40px rgba(255, 182, 193, 0.2);
    transform: rotate(3deg);
    transition: var(--transition);
    border: 3px solid rgba(255, 255, 255, 0.8);
}

.anime-card-featured:hover { 
    transform: rotate(0deg) scale(1.05) translateY(-10px);
    box-shadow: 0 30px 80px rgba(91, 163, 208, 0.4), 0 0 60px rgba(255, 182, 193, 0.3);
}

.anime-card-featured img { width: 100%; height: auto; display: block; }

/* ===== Section Headers - Shinkai Style ===== */
.section-header, .page-header { 
    margin-bottom: 40px;
    position: relative;
    padding-bottom: 16px;
}

.section-header::after, .page-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, #5BA3D0, #FFB6C1);
    border-radius: 2px;
    box-shadow: 0 2px 10px rgba(91, 163, 208, 0.4);
}

.section-header h2, .page-header h1 {
    font-size: 42px;
    font-weight: 800;
    background: linear-gradient(135deg, #5BA3D0, #9B7EDE);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 12px;
    letter-spacing: -0.5px;
}

.page-header p { 
    font-size: 18px;
    color: var(--text-secondary);
    line-height: 1.7;
}

/* ===== Tags - Shinkai Style ===== */
.tags-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 20px;
    margin-bottom: 48px;
}

.tag-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 28px;
    border-radius: var(--border-radius);
    text-decoration: none;
    border: 2px solid rgba(135, 206, 235, 0.3);
    transition: var(--transition);
    box-shadow: 0 4px 15px rgba(91, 163, 208, 0.15);
    display: flex;
    flex-direction: column;
    gap: 10px;
    position: relative;
    overflow: hidden;
}

.tag-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--tag-color, #5BA3D0), transparent);
    opacity: 0;
    transition: var(--transition);
}

.tag-card:hover::before {
    opacity: 1;
}

.tag-card:hover {
    border-color: var(--tag-color, #5BA3D0);
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(91, 163, 208, 0.25), 0 0 20px rgba(var(--tag-color, 91, 163, 208), 0.2);
}

.tag-name { 
    font-weight: 700;
    font-size: 18px;
    color: var(--tag-color, #5BA3D0);
    text-shadow: 0 2px 4px rgba(91, 163, 208, 0.1);
}

.tag-count { 
    font-size: 14px;
    color: var(--text-secondary);
    font-weight: 500;
}

.tag-badge {
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    display: inline-block;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* ===== Filter Section - Shinkai Style ===== */
.filter-section { margin-bottom: 40px; }

.filter-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
}

.filter-tags { 
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
}

.filter-tag {
    padding: 10px 24px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(135, 206, 235, 0.3);
    border-radius: 24px;
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 600;
    transition: var(--transition);
    font-size: 14px;
    box-shadow: 0 2px 10px rgba(91, 163, 208, 0.1);
}

.filter-tag:hover {
    border-color: var(--tag-color, #5BA3D0);
    color: var(--tag-color, #5BA3D0);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(91, 163, 208, 0.2);
}

.filter-tag.active {
    background: linear-gradient(135deg, var(--tag-color, #5BA3D0), var(--tag-color, #9B7EDE));
    border-color: transparent;
    color: white;
    box-shadow: 0 4px 20px rgba(var(--tag-color, 91, 163, 208), 0.4);
}

/* ===== Posts Grid - Shinkai Style ===== */
.posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 32px;
    margin-bottom: 40px;
}

.post-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(91, 163, 208, 0.15);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    border: 2px solid rgba(135, 206, 235, 0.2);
    position: relative;
}

.post-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: linear-gradient(135deg, rgba(91, 163, 208, 0.05), rgba(255, 182, 193, 0.05));
    opacity: 0;
    transition: var(--transition);
    pointer-events: none;
}

.post-card:hover::before {
    opacity: 1;
}

.post-card:hover { 
    transform: translateY(-8px);
    box-shadow: 0 16px 40px rgba(91, 163, 208, 0.25), 0 0 30px rgba(255, 182, 193, 0.15);
    border-color: rgba(135, 206, 235, 0.4);
}

.post-image, .post-image-placeholder {
    width: 100%;
    height: 220px;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(91, 163, 208, 0.1), rgba(255, 182, 193, 0.1));
    position: relative;
}
}

.post-image img, .post-image-placeholder img { width: 100%; height: 100%; object-fit: cover; }

.post-content {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.post-tags { display: flex; flex-wrap: wrap; gap: 8px; }

.post-title { font-size: 18px; font-weight: 600; line-height: 1.4; }
.post-title a { color: var(--text-primary); text-decoration: none; transition: var(--transition); }
.post-title a:hover { color: var(--primary-purple); }

.post-excerpt { font-size: 14px; color: var(--text-secondary); flex: 1; }

.post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 12px;
    border-top: 1px solid var(--border-color);
    font-size: 13px;
}

.post-author { display: flex; align-items: center; gap: 8px; color: var(--text-secondary); }

.author-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-pink) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 14px;
}

.post-stats { display: flex; gap: 12px; color: var(--text-light); }

/* ===== Forums ===== */
.forums-grid { display: grid; gap: 16px; margin-bottom: 32px; }

.forum-card {
    background: var(--bg-card);
    padding: 24px;
    border-radius: var(--border-radius);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 20px;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
    border: 2px solid transparent;
}

.forum-card:hover {
    border-color: var(--primary-purple);
    transform: translateX(4px);
    box-shadow: var(--shadow-md);
}

.forum-icon { font-size: 48px; flex-shrink: 0; }
.forum-info { flex: 1; }
.forum-info h3 { font-size: 20px; font-weight: 600; color: var(--text-primary); margin-bottom: 8px; }
.forum-info p { font-size: 14px; color: var(--text-secondary); margin-bottom: 12px; }
.forum-tags { display: flex; flex-wrap: wrap; gap: 8px; }
.forum-stats { display: flex; gap: 24px; }

.stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 12px 20px;
    background: var(--bg-secondary);
    border-radius: var(--border-radius-sm);
}

.stat-value { font-size: 24px; font-weight: 700; color: var(--primary-purple); }
.stat-label { font-size: 12px; color: var(--text-secondary); text-transform: uppercase; letter-spacing: 0.5px; }

/* ===== Posts List ===== */
.posts-list { display: flex; flex-direction: column; gap: 16px; margin-bottom: 32px; }

.post-item {
    background: var(--bg-card);
    padding: 24px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 24px;
    transition: var(--transition);
    border-left: 4px solid transparent;
}

.post-item:hover { border-left-color: var(--primary-purple); box-shadow: var(--shadow-md); }
.post-item-main { flex: 1; }

.pin-badge {
    display: inline-block;
    padding: 4px 12px;
    background: var(--secondary-peach);
    color: var(--text-primary);
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 8px;
}

.post-item-title { font-size: 18px; font-weight: 600; margin-bottom: 12px; }
.post-item-title a { color: var(--text-primary); text-decoration: none; transition: var(--transition); }
.post-item-title a:hover { color: var(--primary-purple); }
.post-item-tags { display: flex; flex-wrap: wrap; gap: 8px; margin-bottom: 12px; }
.post-item-meta { display: flex; gap: 16px; font-size: 13px; color: var(--text-secondary); }
.post-item-stats { display: flex; gap: 20px; }

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 8px 16px;
    background: var(--bg-secondary);
    border-radius: 8px;
}

.stat-item .stat-value { font-size: 18px; font-weight: 600; color: var(--primary-purple); }
.stat-item .stat-label { font-size: 11px; }

/* ===== Events ===== */
.events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
    margin-bottom: 32px;
}

.event-card {
    background: var(--bg-card);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
}

.event-card:hover { transform: translateY(-4px); box-shadow: var(--shadow-md); }

.event-image, .event-image-placeholder {
    width: 100%;
    height: 180px;
    overflow: hidden;
    background: var(--bg-secondary);
}

.event-image img, .event-image-placeholder img { width: 100%; height: 100%; object-fit: cover; }
.event-content { padding: 20px; }
.event-type { margin-bottom: 12px; }

.type-badge {
    padding: 6px 12px;
    background: linear-gradient(135deg, var(--primary-pink) 0%, var(--secondary-peach) 100%);
    color: white;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
}

.event-title { font-size: 18px; font-weight: 600; margin-bottom: 12px; }
.event-title a { color: var(--text-primary); text-decoration: none; transition: var(--transition); }
.event-title a:hover { color: var(--primary-purple); }
.event-description { font-size: 14px; color: var(--text-secondary); margin-bottom: 16px; }
.event-details { display: flex; flex-direction: column; gap: 8px; margin-bottom: 16px; font-size: 13px; color: var(--text-secondary); }

.event-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 16px;
    border-top: 1px solid var(--border-color);
}

.event-author { font-size: 12px; color: var(--text-light); }

/* ===== Profile ===== */
.profile-header {
    background: var(--bg-card);
    padding: 40px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    display: flex;
    gap: 32px;
    align-items: center;
    margin-bottom: 32px;
}

.profile-avatar-large {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    border: 4px solid var(--primary-purple);
}

.profile-avatar-large img { width: 100%; height: 100%; object-fit: cover; }

.avatar-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-pink) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 48px;
    font-weight: 700;
}

.profile-info { flex: 1; }
.profile-info h1 { font-size: 32px; font-weight: 700; margin-bottom: 8px; }
.profile-bio { font-size: 16px; color: var(--text-secondary); margin-bottom: 16px; }
.profile-stats { display: flex; gap: 32px; }
.profile-actions { display: flex; gap: 12px; }

/* ===== Tabs ===== */
.profile-tabs {
    display: flex;
    gap: 8px;
    margin-bottom: 24px;
    background: var(--bg-card);
    padding: 8px;
    border-radius: var(--border-radius-sm);
}

.tab-btn {
    padding: 12px 24px;
    background: transparent;
    border: none;
    border-radius: 8px;
    font-family: inherit;
    font-size: 15px;
    font-weight: 600;
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition);
}

.tab-btn:hover { background: var(--bg-hover); color: var(--text-primary); }

.tab-btn.active {
    background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-pink) 100%);
    color: white;
}

.tab-content { display: none; }
.tab-content.active { display: block; }

/* ===== Forms ===== */
.create-post-form, .edit-profile-form, .comment-form {
    background: var(--bg-card);
    padding: 32px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
}

.form-group { margin-bottom: 24px; }
.form-group label { display: block; font-weight: 600; margin-bottom: 8px; color: var(--text-primary); }

.form-group input[type="text"],
.form-group input[type="email"],
.form-group input[type="file"],
.form-group select,
.form-group textarea {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    font-family: inherit;
    font-size: 15px;
    background: var(--bg-primary);
    transition: var(--transition);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-purple);
    background: white;
}

.tags-checkbox-group { display: flex; flex-wrap: wrap; gap: 12px; }
.tag-checkbox { display: flex; align-items: center; cursor: pointer; }
.tag-checkbox input { display: none; }

.tag-checkbox span {
    padding: 8px 16px;
    border-radius: 20px;
    transition: var(--transition);
    border: 2px solid transparent;
}

.tag-checkbox input:checked + span { border-color: currentColor; font-weight: 600; }
.form-actions { display: flex; gap: 12px; justify-content: flex-end; margin-top: 32px; }
.error { color: #EF4444; font-size: 13px; margin-top: 4px; display: block; }

/* ===== Post Detail ===== */
.post-detail { max-width: 800px; margin: 0 auto; }

.breadcrumb {
    display: flex;
    gap: 8px;
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 24px;
}

.breadcrumb a { color: var(--primary-purple); text-decoration: none; }

.post-detail-header {
    background: var(--bg-card);
    padding: 32px;
    border-radius: var(--border-radius);
    margin-bottom: 24px;
    box-shadow: var(--shadow-sm);
}

.post-detail-header h1 { font-size: 32px; font-weight: 700; margin-bottom: 20px; line-height: 1.3; }

.post-detail-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20px;
    border-top: 1px solid var(--border-color);
}

.author-info { display: flex; align-items: center; gap: 16px; }

.author-avatar-large {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-pink) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 24px;
}

.author-name { font-weight: 600; font-size: 16px; }
.post-date { font-size: 13px; color: var(--text-secondary); }
.post-stats-large { display: flex; gap: 16px; font-size: 14px; color: var(--text-secondary); }

.post-detail-content {
    background: var(--bg-card);
    padding: 32px;
    border-radius: var(--border-radius);
    margin-bottom: 32px;
    box-shadow: var(--shadow-sm);
}

.post-content-image { margin-bottom: 24px; border-radius: var(--border-radius-sm); overflow: hidden; }
.post-content-image img { width: 100%; height: auto; }
.post-text { font-size: 16px; line-height: 1.8; color: var(--text-primary); }

/* ===== Comments ===== */
.comments-section {
    background: var(--bg-card);
    padding: 32px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
}

.comments-section h3 { font-size: 24px; font-weight: 700; margin-bottom: 24px; }

.comment-form {
    margin-bottom: 32px;
    padding: 24px;
    background: var(--bg-secondary);
    border-radius: var(--border-radius-sm);
}

.comment-form textarea {
    width: 100%;
    padding: 12px;
    border: 2px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    font-family: inherit;
    resize: vertical;
    background: white;
}

.comments-list { display: flex; flex-direction: column; gap: 20px; }

.comment-item {
    display: flex;
    gap: 16px;
    padding: 16px;
    background: var(--bg-secondary);
    border-radius: var(--border-radius-sm);
}

.comment-author-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-mint) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    flex-shrink: 0;
}

.comment-content { flex: 1; }
.comment-header { display: flex; gap: 12px; margin-bottom: 8px; }
.comment-author { font-weight: 600; color: var(--text-primary); }
.comment-date { font-size: 13px; color: var(--text-light); }
.comment-text { font-size: 14px; line-height: 1.6; color: var(--text-secondary); margin-bottom: 8px; }
.comment-actions { display: flex; gap: 12px; }

.comment-like {
    background: none;
    border: none;
    color: var(--text-light);
    font-size: 13px;
    cursor: pointer;
    padding: 4px 8px;
    border-radius: 6px;
    transition: var(--transition);
}

.comment-like:hover { background: var(--bg-hover); color: var(--primary-pink); }
.no-comments { text-align: center; color: var(--text-secondary); padding: 40px; }

.login-prompt {
    text-align: center;
    padding: 24px;
    background: var(--bg-secondary);
    border-radius: var(--border-radius-sm);
    margin-bottom: 32px;
}

.login-prompt a { color: var(--primary-purple); font-weight: 600; }

/* ===== Search ===== */
.search-form-advanced {
    background: var(--bg-card);
    padding: 32px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    margin-bottom: 32px;
}

.search-inputs { display: flex; gap: 12px; margin-bottom: 20px; }

.search-inputs input {
    flex: 1;
    padding: 12px 16px;
    border: 2px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    font-family: inherit;
    font-size: 15px;
}

.search-inputs select {
    padding: 12px 16px;
    border: 2px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    font-family: inherit;
    font-size: 15px;
    background: white;
}

.search-tags label { display: block; font-weight: 600; margin-bottom: 12px; }
.tags-filter { display: flex; flex-wrap: wrap; gap: 12px; }
.search-section { margin-bottom: 48px; }
.search-section h2 { font-size: 24px; font-weight: 700; margin-bottom: 24px; color: var(--text-primary); }

/* ===== Event Detail ===== */
.event-detail {
    max-width: 900px;
    margin: 0 auto;
    background: var(--bg-card);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-md);
}

.event-detail-image { width: 100%; height: 400px; overflow: hidden; }
.event-detail-image img { width: 100%; height: 100%; object-fit: cover; }
.event-detail-content { padding: 40px; }
.event-detail-content h1 { font-size: 36px; font-weight: 700; margin-bottom: 24px; }

.event-meta {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 32px;
    padding: 24px;
    background: var(--bg-secondary);
    border-radius: var(--border-radius-sm);
}

.meta-item { display: flex; align-items: center; gap: 12px; font-size: 15px; color: var(--text-secondary); }
.meta-icon { font-size: 20px; }
.event-description h3 { font-size: 20px; font-weight: 600; margin-bottom: 16px; }
.event-description p { font-size: 16px; line-height: 1.8; color: var(--text-secondary); }

/* ===== Forum Header ===== */
.forum-header {
    background: var(--bg-card);
    padding: 40px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    display: flex;
    gap: 24px;
    align-items: center;
    margin-bottom: 32px;
}

.forum-icon-large { font-size: 64px; flex-shrink: 0; }
.forum-header-content { flex: 1; }
.forum-header-content h1 { font-size: 32px; font-weight: 700; margin-bottom: 12px; }
.forum-header-content p { font-size: 16px; color: var(--text-secondary); margin-bottom: 16px; }

/* ===== Empty State ===== */
.empty-state {
    text-align: center;
    padding: 80px 40px;
    background: var(--bg-card);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
}

.empty-state p { font-size: 16px; color: var(--text-secondary); margin-bottom: 24px; }

/* ===== Alerts ===== */
.alert {
    padding: 16px 24px;
    border-radius: var(--border-radius-sm);
    margin-bottom: 24px;
    font-weight: 500;
}

.alert-success { background: #D1FAE5; color: #065F46; border: 2px solid #34D399; }
.alert-error { background: #FEE2E2; color: #991B1B; border: 2px solid #F87171; }

/* ===== Pagination ===== */
.pagination { display: flex; justify-content: center; gap: 8px; margin-top: 40px; }

/* ===== Footer ===== */
.footer {
    background: var(--bg-card);
    border-top: 1px solid var(--border-color);
    padding: 48px 0 24px;
    margin-top: 80px;
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 32px;
}

.footer-section h3 {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 16px;
    background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-pink) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.footer-section h4 { font-size: 16px; font-weight: 600; margin-bottom: 12px; }
.footer-section p { color: var(--text-secondary); line-height: 1.6; }
.footer-section ul { list-style: none; }
.footer-section ul li { margin-bottom: 8px; }
.footer-section ul li a { color: var(--text-secondary); text-decoration: none; transition: var(--transition); }
.footer-section ul li a:hover { color: var(--primary-purple); }
.social-links { display: flex; gap: 16px; font-size: 24px; }
.social-links a { transition: var(--transition); }
.social-links a:hover { transform: scale(1.2); }

.footer-bottom {
    text-align: center;
    padding-top: 24px;
    border-top: 1px solid var(--border-color);
    color: var(--text-secondary);
    font-size: 14px;
}

/* ===== Responsive Design ===== */
@media (max-width: 768px) {
    .hero-section { grid-template-columns: 1fr; text-align: center; }
    .hero-content h1 { font-size: 40px; }
    .navbar .container { flex-wrap: wrap; }
    .nav-search { flex: 1 1 100%; order: 3; }
    .posts-grid, .events-grid { grid-template-columns: 1fr; }
    .forum-header, .profile-header { flex-direction: column; text-align: center; }
    .post-item { flex-direction: column; }
    .filter-header { flex-direction: column; align-items: flex-start; }
}
